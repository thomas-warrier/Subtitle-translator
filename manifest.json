{
    "name": "Subtitle Translator Netflix",
    "version": "1.0.1",
    "manifest_version": 3,
    "description": "This extension aims to facilitate the learning of a language with movies and series.",
    "content_scripts": [
        {
            "js": [
                "waiter.js",
                "lang.js",
                "popUpManager.js",
                "/popUpType/popUpTranslate.js",
                "/popUpType/popUpError.js",
                "/popUpType/popUpSettings.js",
                "subtitles.js",
                "translate.js",
                "jquery-3.6.3.js",
                "init.js"
            ],
            "css": [
                "/css/main.css",
                "/css/styleButton.css",
                "/css/styleTranslatePopUp.css",
                "/css/styleErrorPopUp.css",
                "/css/styleSettingsPopUp.css"
            ],
            "matches": [
                "*://www.netflix.com/watch/*",
                "*://www.netflix.com/browse"
            ]
        }
    ]
    
}