{
    "name": "Subtitle translator for Netflix,Amazon Prime,Disney Plus,Youtube",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "description of extension",
    "content_scripts": [
        {
            "js": [
                "waiter.js",
                "lang.js",
                "popUpManager.js",
                "/popUpType/popUpTranslate.js",
                "/popUpType/popUpError.js",
                "/popUpType/popUpSettings.js",
                "subtitles.js",
                "translate.js",
                "init.js"
            ],
            "css": [
                "/css/main.css",
                "/css/styleButton.css",
                "/css/styleTranslatePopUp.css",
                "/css/styleErrorPopUp.css",
                "/css/styleSettingsPopUp.css"
            ],
            "matches": [
                "*://www.netflix.com/watch/*"
            ]
        }
    ],
    "permissions":[
        "storage"
    ]
    
}