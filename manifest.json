{
    "name": "Subtitle translator for Netflix,Amazon Prime,Disney Plus,Youtube",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "description of extension",
    "content_scripts": [
        {
            "js": [
                "waiter.js",
                "lang.js",
                "popUp.js",
                "popUpTranslate.js",
                "popUpError.js",
                "popUpSettings.js",
                "subtitles.js",
                "translate.js",
                "init.js"
            ],
            "css": [
                "styleButton.css",
                "stylePopUp.css",
                "styleErrorPopUp.css",
                "styleSettingsPopUp.css"
            ],
            "matches": [
                "*://www.netflix.com/watch/*"
            ]
        }
    ],
    "permissions":[
        "storage"
    ]
    
}